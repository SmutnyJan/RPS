@page
@model IndexModel
@using RPS.Model
@{
    ViewData["Title"] = "Home page";
}


@if (Model.Player == Choice.Paper)
{
    <img src="~/paper.svg" width="100" height="100" />
}
@if (Model.Player == Choice.Rock)
{
    <img src="~/rock.svg" width="100" height="100" />
}
@if (Model.Player == Choice.Scissors)
{
    <img src="~/scissors.svg" width="100" height="100" />
}
@if (Model.Computer == Choice.Paper)
{
    <img src="~/paper.svg" width="100" height="100" id="svg"/>
}
@if (Model.Computer == Choice.Rock)
{
    <img src="~/rock.svg" width="100" height="100" id="svg"/>
}
@if (Model.Computer == Choice.Scissors)
{
    <img src="~/scissors.svg" width="100" height="100" id="svg"/>
}
<div class="text-center">
    <h1>@Model.Player x @Model.Computer</h1>
    <p>počet kol: @Model.Round</p>
    <p>počet vítězství: @Model.Win</p>
    <p>počet proher: @Model.Lose</p>
    <p>počet remíz: @Model.Draw</p>
    @if (Model.Round != 0)
    {
        <p>úspěšnost: @((100 * Model.Win) / Model.Round)%</p>
    }
    @if (Model.Round == 0)
    {
        <p>úspěšnost: 0%</p>
    }

</div>
<div>
    <form method="post">
        <input type="hidden" asp-for="@Model.Round" value="@Model.Round" />
        <input type="hidden" asp-for="@Model.Win" value="@Model.Win" />
        <input type="hidden" asp-for="@Model.Lose" value="@Model.Lose" />
        <input type="hidden" asp-for="@Model.Draw" value="@Model.Draw" />

        <div class="form-check">
            <input class="form-check-input" type="radio" asp-for="@Model.Player" value="@Choice.Rock">
            <label class="form-check-label" asp-for="@Model.Player">
                Kámen
            </label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="radio" asp-for="@Model.Player" value="@Choice.Paper">
            <label class="form-check-label" asp-for="@Model.Player">
                Papír
            </label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="radio" asp-for="@Model.Player" value="@Choice.Scissors">
            <label class="form-check-label" asp-for="@Model.Player">
                Nůžky
            </label>
        </div>
        <button type="submit" class="btn-primary">Play</button>
    </form>
</div>
